{
  "name": "bandersnatch",
  "description": "Simple TypeScript CLI / REPL framework",
  "version": "1.3.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/hongaar/bandersnatch.git"
  },
  "keywords": [
    "cli",
    "args",
    "argv",
    "parser",
    "terminal",
    "console",
    "program",
    "command",
    "argument",
    "option"
  ],
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "prepublishOnly": "yarn build",
    "build": "tsc",
    "watch": "tsc --watch",
    "lint": "prettier --write \"src/**/*\"",
    "test": "jest",
    "start": "ts-node",
    "doc:toc": "doctoc README.md",
    "doc:todos": "leasot --exit-nicely --reporter markdown \"src/**/*.ts\" > TODO.md"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/yargs": "^15.0.5",
    "enquirer": "^2.3.6",
    "string-argv": "^0.3.1",
    "typed-emitter": "^1.2.0",
    "yargs": "^15.4.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "@types/jest": "26.0.14",
    "@types/node": "14.11.1",
    "doctoc": "1.4.0",
    "husky": "4.3.0",
    "jest": "26.4.2",
    "leasot": "11.3.0",
    "mock-argv": "1.1.8",
    "prettier": "2.1.0",
    "promise.prototype.finally": "3.1.2",
    "ts-jest": "26.2.0",
    "ts-node": "9.0.0",
    "typescript": "4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn doc:toc && yarn doc:todos"
    }
  }
}
