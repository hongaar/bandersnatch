{
  "name": "bandersnatch",
  "description": "Simple TypeScript CLI / REPL framework",
  "version": "1.9.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/hongaar/bandersnatch.git"
  },
  "keywords": [
    "cli",
    "args",
    "argv",
    "parser",
    "terminal",
    "console",
    "program",
    "command",
    "argument",
    "option"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=12"
  },
  "sideEffects": false,
  "main": "lib/cjs/index.js",
  "module": "lib/mjs/index.js",
  "files": [
    "lib"
  ],
  "types": "lib/mjs/index.d.ts",
  "scripts": {
    "prepublishOnly": "yarn build",
    "build": "yarn build:cjs && yarn build:mjs",
    "build:cjs": "tsc --project tsconfig.build.json --module commonjs --outDir lib/cjs",
    "build:mjs": "tsc --project tsconfig.build.json --module es6 --outDir lib/mjs",
    "watch": "tsc --watch",
    "format": "yarn format:code && yarn format:toc && yarn format:todos",
    "format:code": "prettier --write \"src/**/*\"",
    "format:toc": "doctoc README.md",
    "format:todos": "leasot --exit-nicely --reporter markdown \"{src,test-d,tests}/**/*.ts\" > TODO.md",
    "test": "tsd && jest",
    "start": "ts-node",
    "release": "semantic-release"
  },
  "dependencies": {
    "@types/yargs": "^17.0.2",
    "enquirer": "^2.3.6",
    "string-argv": "^0.3.1",
    "typed-emitter": "^2.0.0",
    "yargs": "^17.1.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/git": "10.0.1",
    "@types/jest": "27.4.1",
    "@types/node": "16.11.26",
    "doctoc": "2.1.0",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "leasot": "12.2.0",
    "mock-argv": "2.0.8",
    "prettier": "2.6.0",
    "semantic-release": "19.0.2",
    "ts-jest": "27.1.3",
    "ts-node": "10.7.0",
    "tsd": "0.19.1",
    "typescript": "4.6.2"
  }
}