{
  "name": "bandersnatch",
  "description": "Simple TypeScript CLI / REPL framework",
  "version": "1.8.4",
  "repository": {
    "type": "git",
    "url": "https://github.com/hongaar/bandersnatch.git"
  },
  "keywords": [
    "cli",
    "args",
    "argv",
    "parser",
    "terminal",
    "console",
    "program",
    "command",
    "argument",
    "option"
  ],
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "prepublishOnly": "yarn build",
    "build": "tsc",
    "watch": "tsc --watch",
    "lint": "prettier --write \"src/**/*\"",
    "test": "jest",
    "start": "ts-node",
    "doc:toc": "doctoc README.md",
    "doc:todos": "leasot --exit-nicely --reporter markdown \"src/**/*.ts\" > TODO.md"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/yargs": "^17.0.2",
    "enquirer": "^2.3.6",
    "string-argv": "^0.3.1",
    "typed-emitter": "^1.3.1",
    "yargs": "^17.1.1"
  },
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "@semantic-release/changelog": "6.0.0",
    "@semantic-release/git": "10.0.0",
    "@types/jest": "27.0.2",
    "@types/node": "16.7.13",
    "doctoc": "2.1.0",
    "husky": "7.0.2",
    "jest": "27.3.0",
    "leasot": "12.0.0",
    "mock-argv": "2.0.6",
    "prettier": "2.4.1",
    "ts-jest": "27.0.7",
    "ts-node": "10.3.0",
    "typescript": "4.4.4"
  }
}
